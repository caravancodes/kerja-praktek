<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.EditorMemberActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/EditText_namaMember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name" />

        <EditText
            android:id="@+id/EditText_passMember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password" />

        <EditText
            android:id="@+id/EditText_jabatanMember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Position"
            android:drawableTint="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/EditText_noTelpMember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number" />




        <ImageButton
            android:id="@+id/ImageBtn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_photo_add"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/Button_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add new member" />

    </LinearLayout>

</RelativeLayout>