<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_NamaRuangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#006064"
                android:text="Nama Ruangan"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/large_text"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="124dp"
                    android:layout_height="fill_parent"
                    android:background="#B2EBF2"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/card_padding"
                    android:paddingHorizontal="@dimen/card_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date :"
                        android:textColor="#000000" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/card_padding"
                    android:paddingTop="@dimen/card_padding"
                    android:background="#26C6DA">

                    <TextView
                        android:id="@+id/textView_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textColor="#000000" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="124dp"
                    android:layout_height="fill_parent"
                    android:background="#B2EBF2"
                    android:gravity="right"
                    android:orientation="vertical"

                    android:paddingHorizontal="@dimen/card_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agenda :"
                        android:textColor="#000000" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/card_padding"

                    android:background="#26C6DA">

                    <TextView
                        android:id="@+id/textView_agenda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agenda"
                        android:textColor="#000000"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:background="#B2EBF2"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/card_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Booked By :"
                        android:textColor="#000000" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/card_padding"
                    android:background="#26C6DA">

                    <TextView
                        android:id="@+id/textView_namaUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pic"
                        android:textColor="#000000"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:background="#B2EBF2"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/card_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time :"
                        android:textColor="#000000" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/card_padding"
                    android:background="#26C6DA">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView_WaktuAwal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Waktu Mulai"
                            android:textColor="#000000"/>

                        <TextView
                            android:id="@+id/strip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - "
                            android:textColor="#000000"
                            />
                        <TextView
                            android:id="@+id/textView_WaktuAkhir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Waktu Akhir"
                            android:textColor="#000000"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:background="#B2EBF2"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/card_padding"
                    android:paddingHorizontal="@dimen/card_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Number :"
                        android:textColor="#000000" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/card_padding"
                    android:paddingHorizontal="@dimen/card_padding"
                    android:background="#26C6DA">

                    <TextView
                        android:id="@+id/textView_noTelp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nomor Telephone"
                        android:textColor="#000000"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView_Note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Note"
                android:textAlignment="center"
                android:background="#9FA8DA"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
>

                <ImageButton
                    android:id="@+id/ImgBtn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#C62828"
                    android:padding="10dp"
                    android:src="@drawable/ic_cancel" />

                <ImageButton
                    android:id="@+id/ImgBtn_accept"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#33691E"
                    android:padding="10dp"
                    android:src="@drawable/ic_check" />


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>